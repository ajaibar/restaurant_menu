def restau ():
    final_total = 0
    response = True
    while response:
        answer = input('Do you want to compute a total? "y"/"n" ')
        if answer.lower() == 'y':
            sub_total = input('Enter your subtotal: ')
            while True:
                try:
                    sub_total=float(sub_total)
                    break
                except ValueError:
                    sub_total=input("Please reenter sub_total <Use Digits>: ")
                    
            tip = input('Enter the tip as percentage: ')
            while True:
                try:
                    tip=float(tip)
                    break
                except ValueError:
                    sub_total=input("Please reenter sub_total <Use Digits>: ")
            tip = float(tip)
            total = float(sub_total * 1.0825 + (tip/100) * sub_total)
        
            print('--- The Total of this transaction is:',total)
            final_total = final_total + total
        
            print('--- Your final total is:',final_total)
        elif answer.lower() == 'n':
            print('Good bye')
            break
        else:
            print('Valid response is "y" or "n"')
            continue
